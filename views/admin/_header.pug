header
  .header-container.sticky
    a.logo(href='/')
      img.logo-img(src='/img/ehp_logo.png' alt='The logo for the East Hills Park')
    nav.main-nav
      ul.main-nav--list
        if user
          a.nav__el.nav__el--logout Log out
          a.nav__el(href='/admin')
            img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
            span= user.name.split(' ')[0]
        else
          a.nav__el(href='/admin') Log in
          a.nav__el.nav__el--cta(href='/admin/signup') Sign up